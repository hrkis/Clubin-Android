<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mview"
            type="com.clubin.com.ui.fragment.hosts.viewmodel.HostCreationPeopleViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:rotation="180"
                android:src="@drawable/right_arrow" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/closeBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:rotation="180"
                android:src="@drawable/ic_close_delete_icon"
                app:tint="@color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            style="@style/boldTextView"
            android:text="Combien de personnes souhaitez-vous inviter ?"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                style="@style/boldTextView"
                android:text="Places :"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/placesNumTxt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                style="@style/boldTextView"
                android:text="2"
                android:textSize="46sp" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/grey_with_opacity"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_remove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/boldTextView"
                    android:gravity="center"
                    android:padding="3dp"
                    android:src="@drawable/ic_horizontal_rule_24"
                    app:tint="@color/white" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"
                    android:background="@color/grey" />

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/boldTextView"
                    android:gravity="center"
                    android:src="@android:drawable/ic_input_add"
                    app:tint="@color/white" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/semiBoldTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommander une tranche d'Ã¢ge"

                android:textColor="@color/bright_green_new"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/down_arrow"
                app:tint="@color/bright_green_new" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/continueBtn"
            style="@style/semiBoldTextView"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:background="@drawable/btn_red_grad_with_arrow"
            android:gravity="center"
            android:text="Continuer"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

</layout>