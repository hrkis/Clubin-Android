<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/eventTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_search"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="3dp"
                android:src="@android:drawable/ic_search_category_default"
                app:tint="@color/dull_green" />

            <TextView
                android:id="@+id/tab_event_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/boldTextView"
                android:text="Events"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hostTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_home"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="4dp"
                android:padding="2dp"
                android:src="@drawable/home"
                app:tint="@color/dull_white" />

            <TextView
                android:id="@+id/tab_home_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/boldTextView"
                android:text="HÃ´tes"
                android:textColor="@color/dull_white"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/billetsTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_billets"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="4dp"
                android:padding="3dp"
                android:src="@drawable/ticket"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tab_billets_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/boldTextView"
                android:text="Billets"
                android:textColor="@color/dull_white"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/profileTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_profile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="4dp"
                android:padding="1dp"
                android:src="@drawable/account"
                app:tint="@color/dull_white" />

            <TextView
                android:id="@+id/tab_profile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/boldTextView"
                android:text="Profil"
                android:textColor="@color/dull_white"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>