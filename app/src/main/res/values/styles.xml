<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="extraBoldTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_extrabold</item>
    </style>

    <style name="boldTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_bold</item>
    </style>

    <style name="semiBoldTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
    </style>

    <style name="mediumTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
    </style>

    <style name="regularTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_regular</item>
    </style>

    <style name="boldButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
    </style>
    <style name="chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/white</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="chipBackgroundColor">@color/black_background</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
    </style>
</resources>