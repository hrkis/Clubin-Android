<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <size
                android:width="200dp"
                android:height="44dp" />
            <stroke
                android:width="2dp"
                android:color="@color/flag_red" />
        </shape>
    </item>
    <item
        android:width="20dp"
        android:height="20dp"
        android:top="11dp"
        android:drawable="@drawable/ic_close_delete_icon"
        android:tint="@color/white"
        app:tint="@color/white"
        android:gravity="end"
        android:left="180dp"
        android:right="20dp" />

    <item android:right="54dp">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@color/flag_red"
                android:gradientRadius="150dp"
                android:startColor="@color/flag_red"
                android:type="linear" />
            <size
                android:width="160dp"
                android:height="44dp" />
            <corners android:radius="22dp" />
        </shape>
    </item>
</layer-list>